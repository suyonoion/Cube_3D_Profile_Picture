<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:rotationX="35"
    android:id="@+id/prof_text">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#203caefb">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#803caefb"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Pemilik"
            android:layout_weight="1"
            android:textSize="13sp" android:textColor="#80ffffff"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:src="#ff3daffc"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Suyono"
            android:layout_weight="1"
            android:textSize="13sp" android:textColor="#80ffffff"
            android:textStyle="italic"
            android:gravity="right"
            android:paddingRight="1dp" />
        </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:layout_weight="1"
            android:textSize="13sp" android:textColor="#80ffffff"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:src="#ff3daffc"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Laki-laki"
            android:layout_weight="1"
            android:textSize="11sp" android:textColor="#80ffffff"
            android:textStyle="italic"
            android:gravity="right"
            android:paddingRight="1dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:layout_weight="1"
            android:textSize="13sp" android:textColor="#80ffffff"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:src="#ff3daffc"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="facebook.com/suyono.ion"
            android:layout_weight="1"
            android:textSize="11sp" android:textColor="#80ffffff"
            android:textStyle="italic"
            android:gravity="right"
            android:paddingRight="1dp"
            android:textColorLink="#80ffffff"
            android:longClickable="false" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_weight="1"
            android:textSize="13sp" android:textColor="#80ffffff"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:src="#ff3daffc"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="suyonion8@gmail.com"
            android:layout_weight="1"
            android:textSize="11sp" android:textColor="#80ffffff"
            android:textStyle="italic"
            android:gravity="right"
            android:paddingRight="1dp"
            android:textColorLink="#80ffffff"
            android:longClickable="false" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="No. HP"
            android:layout_weight="1"
            android:textSize="13sp" android:textColor="#80ffffff"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:src="#ff3daffc"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="081x xxxx xxxx"
            android:layout_weight="1"
            android:textSize="11sp" android:textColor="#80ffffff"
            android:textStyle="italic"
            android:gravity="right"
            android:paddingRight="1dp"
            android:autoLink="phone" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:layout_weight="1"
            android:textSize="13sp" android:textColor="#80ffffff"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:src="#ff3daffc"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Kendal, Jawa Tengah"
            android:layout_weight="1"
            android:textSize="11sp" android:textColor="#80ffffff"
            android:textStyle="italic"
            android:gravity="right"
            android:paddingRight="1dp" />
    </LinearLayout>

</LinearLayout>
</LinearLayout>